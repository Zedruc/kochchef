{
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    },
    "compilerOptions": {
        "lib": ["ES2021", "ES2021.String"],
        "target": "es6",
        "module": "commonjs",
        "outDir": "./dist",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}